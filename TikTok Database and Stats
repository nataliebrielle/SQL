--Display all columns from the database
SELECT * FROM tiktok;

--Add a column for emotion felt while watching the videos
ALTER TABLE tiktok ADD emotion TEXT;
SELECT * FROM tiktok;

--Fill in the emotion under the new column
UPDATE tiktok SET emotion = "happy" WHERE id=1;
UPDATE tiktok SET emotion = "sad" WHERE id=2;
UPDATE tiktok SET emotion = "angry" WHERE id=3;
UPDATE tiktok SET emotion = "sad" WHERE id=4;
UPDATE tiktok SET emotion = "excited" WHERE id=5;
SELECT * FROM tiktok;

--Delete a row from the database
DELETE FROM tiktok WHERE id=3;
SELECT * FROM tiktok;
