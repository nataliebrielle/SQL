--Create tiktok database
CREATE TABLE tiktok (id INTEGER PRIMARY KEY,date INTEGER,hours_used INTEGER, videos_watched INTEGER);
INSERT INTO tiktok (date,hours_used,videos_watched) VALUES ("7-1","3","100");
